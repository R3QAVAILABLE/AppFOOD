<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppFOOD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.AppFOOD" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="app_bar">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:padding">7dp</item>
        <item name="fontFamily">@font/merriweather_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/dark_grey</item>
    </style>

    <!--    background of the whole app-->
    <color name="bg_app">@color/bg_black</color>

    <!--    sign up page-->
    <style name="sign_up">
        <item name="hintTextColor">@color/bg_grey_light</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="textFillColor">@color/white</item>
    </style>

    <!--    Tab Layout-->
    <color name="tabL_grey_lGray">#393E46</color>
    <color name="tabText_blue_lBlue">#2C74B3</color>
    <color name="tabText_white_grey">#D1D1D1</color>

    <!--    Recycler View-->
    <color name="rView_white_black">@color/white</color>

    <!--    Chats-->
    <color name="chat_texts">@color/white</color>
    <color name="outgoing_chats">@color/light_blue</color>

    <!--    straight line-->
    <color name="line_grey_black">@color/bg_grey_dark</color>

    <!--    color change on long press-->
    <color name="longPress">@color/bg_grey_dark</color>
</resources>