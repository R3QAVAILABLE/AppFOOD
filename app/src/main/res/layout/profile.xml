<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_signup"
    android:padding="16dp"
    tools:context=".Profile">


    <!-- Add a Button for image upload -->

    <!-- Add an ImageView for the uploaded image -->


    <ImageView
        android:id="@+id/imageViewUploaded"
        android:layout_width="121dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/textViewNazwa"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonUploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewUploaded"
        android:layout_alignEnd="@+id/buttonback"
        android:layout_marginStart="156dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="-1dp"
        android:layout_toEndOf="@+id/buttonSaveUsername"
        android:text="Upload Image" />

    <TextView
        android:id="@+id/textViewNazwa"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="650dp"
        android:text="Nazwa:"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/editTextNewUsername"
        android:layout_width="375dp"
        android:layout_height="63dp"
        android:layout_alignTop="@+id/textViewNazwa"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="239dp"
        android:layout_marginBottom="388dp"
        android:hint="New Username" />

    <Button
        android:id="@+id/buttonSaveUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonback"
        android:layout_marginBottom="105dp"
        android:text="Save" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="620dp"
        android:text="Imię: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="445dp"
        android:text="E-mail: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="568dp"
        android:text="UserDetails"></TextView>

    <Button
        android:id="@+id/buttonback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:text="WRÓĆ "
        android:textStyle="bold" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:gravity="center"
        android:text="Logout"
        android:textStyle="bold">

    </Button>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/lavender"
        app:itemRippleColor="@android:color/transparent"/>
</RelativeLayout>
